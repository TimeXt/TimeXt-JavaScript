{
  "extends": "airbnb-base",
  "plugins": [
    "jest"
  ],
  "env": {
    "jest/globals": true
  },
  "globals": {
    "window": true,
    "timext": true
  },
  "rules": {
    "max-len": [
      "error",
      200
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-param-reassign": [
      0
    ],
    "func-names": [
      0
    ],
    "import/no-extraneous-dependencies": [
      0
    ],
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "timext"
        ]
      }
    ],
    "import/extensions": [
      2,
      "ignorePackages"
    ],
    "semi": "off",
    "no-extend-native": "off",
    "linebreak-style": "off",
    "indent": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "padded-blocks": "off",
    "no-var": "off",
    "vars-on-top": "off"
  }
}