{
  "name": "timext-js",
  "version": "0.7.0",
  "description": "4kB time library to handle date and time more easily",
  "main": "timext.min.js",
  "types": "",
  "scripts": {
    "test": "jest",
    "lint": "./node_modules/.bin/eslint src/* test/* build/*",
    "build": "cross-env BABEL_ENV=build node build",
    "sauce": "npx karma start karma.sauce.conf.js",
    "test:sauce": "npm run sauce -- 0 && npm run sauce -- 1 && npm run sauce -- 2  && npm run sauce -- 3",
    "size": "size-limit && gzip-size timext.min.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TimeXt/TimeXt-JavaScript.git"
  },
  "keywords": [
    "timext",
    "extensions",
    "time"
  ],
  "author": "GuepardoApps (Jonas Schubert)",
  "license": "MIT",
  "pre-commit": [
    "lint"
  ],
  "size-limit": [
    {
      "limit": "4.00 KB",
      "path": "timext.min.js"
    }
  ],
  "jest": {
    "roots": [
      "test"
    ],
    "testRegex": "test/(.*?/)?.*test.js$",
    "testURL": "http://localhost",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ]
  },
  "release": {
    "prepare": [
      {
        "path": "@semantic-release/changelog"
      },
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.5.0",
    "@babel/core": "7.5.4",
    "@babel/node": "7.5.0",
    "@babel/preset-env": "7.5.4",
    "babel-core": "6.26.3",
    "babel-jest": "24.8.0",
    "babel-plugin-external-helpers": "6.22.0",
    "cross-env": "5.2.0",
    "eslint": "6.0.1",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jest": "22.7.2",
    "gzip-size-cli": "3.0.0",
    "jasmine-core": "2.99.1",
    "jest": "24.8.0",
    "karma": "4.2.0",
    "karma-jasmine": "1.1.2",
    "karma-sauce-launcher": "2.0.2",
    "pre-commit": "1.2.2",
    "rollup": "1.16.7",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-uglify": "6.0.2",
    "size-limit": "1.3.7"
  }
}
